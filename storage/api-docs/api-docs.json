        "/reset-password/{token}": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "User recovery password",
                "description": "This endpoint is used to update the password of the user.",
                "operationId": "ac87560950326ad8f1090a5c279ad040",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "token": {
                                        "type": "string",
                                        "example": "abcdefghij"
                                    },
                                    "token": {
                                        "type": "string",
                                        "example": "abcdefghij"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    },
                                    "password_confirm": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "400": {
                        "description": "Invalid Token!"
                    }
                }
            }
        }
