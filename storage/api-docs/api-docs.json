        "/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Login",
                "description": "This endpoint is used for a user to log into the app and get an access token.",
                "operationId": "d78c9f240c3e6bd0250605b3fa8cbf34",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
